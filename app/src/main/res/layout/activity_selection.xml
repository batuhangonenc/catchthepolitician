<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectionActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="56dp">

        <LinearLayout
            android:onClick="startTredau"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageTredau"
                android:layout_width="182dp"
                android:layout_height="124dp"

                app:srcCompat="@drawable/tredau" />

            <TextView
                android:layout_width="147dp"
                android:layout_height="match_parent"
                android:text="Country : Canada\nName : Justin Trudeau\nAge : 49\nBorn : Ottawa, Canada"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:onClick="startMerkel"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageMerkel"
                android:layout_width="182dp"
                android:layout_height="124dp"

                app:srcCompat="@drawable/merkel" />

            <TextView
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:text="Country : Germany\nName : Angela Dorothea Kasner\nAge : 66\nBorn : Hamburg, West Germany"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:onClick="startMacron"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageMacron"
                android:layout_width="182dp"
                android:layout_height="124dp"

                app:srcCompat="@drawable/macron" />

            <TextView
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:text="Country : France\nName : Emmanuel Macron\nAge : 43\nBorn : Amiens, France"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:onClick="startBiden"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageBiden"
                android:layout_width="181dp"
                android:layout_height="122dp"

                app:srcCompat="@drawable/biden" />

            <TextView
                android:layout_width="148dp"
                android:layout_height="110dp"
                android:text="Country : USA\nName : Joe Biden\nAge : 78\nBorn : Pennsylvania, USA"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:onClick="startCinping"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageCinping"
                android:layout_width="180dp"
                android:layout_height="100dp"

                app:srcCompat="@drawable/cinping" />

            <TextView
                android:layout_width="146dp"
                android:layout_height="88dp"
                android:text="Country : China\nName : Xi Jinping\nAge : 67\nBorn : Beijing, China"
                android:textAlignment="center" />
        </LinearLayout>

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/timersel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:hint="time limit as seconds ( touch to start )"
            android:inputType="textPersonName"
            android:textAlignment="center" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>